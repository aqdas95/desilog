<!DOCTYPE html>
<html>
  <head>
    <title>Desilog | Blog and File Resource HTML Theme</title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Raleway:200,200i,300,300i,400,500,600,700,800,900" rel="stylesheet">
		<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= favicon_link_tag '/images/ico/apple-touch-icon-144.png', rel: 'apple-touch-icon', size: '144x144' %>
		<%= favicon_link_tag '/images/ico/apple-touch-icon-114.png', rel: 'apple-touch-icon', size: '114x114' %>
		<%= favicon_link_tag '/images/ico/apple-touch-icon-72.png', rel: 'apple-touch-icon', size: '72x72' %>
		<%= favicon_link_tag '/images/ico/apple-touch-icon-57.png', rel: 'apple-touch-icon', size: '57x57' %>
		
  </head>

  <body class="tr-homepage">
		<div class="top-banner">						
			<a href="#">
				<%= image_tag 'top-banner.png', alt: 'op Banner Advertisements' %>
			</a>	
		</div>

		<div class="container">
			<div class="logo-search header-two clearfix">										
				<div class="logo">
					<h1>
						<%= link_to home_path do %>
							<%= image_tag 'logo.png', alt: 'Desilog', title: 'Desilog' %>
						<% end %>
					</h1>
				</div>

				<div class="ticker-flexslider">				
					<div class="flex-viewport">
						<ul class="slides">
							<li class="clone">
								<%= image_tag 'super-natural-43x39.jpg', alt: 'science-kombat' %>
								<div class="ticker-action">
									<span>Feb 18, 2017</span>
									<h4><%= link_to 'Science Kombat', blog_details_path %></h4>	
								</div>
							</li>
							<li class="clone">
								<%= image_tag 'super-natural-43x39.jpg', alt: 'science-kombat' %>
								<div class="ticker-action">
									<span>Feb 15, 2017</span>
									<h4><%= link_to 'Science Kombat', blog_details_path %></h4>	
								</div>
							</li>
							<li class="clone">
								<%= image_tag 'super-natural-43x39.jpg', alt: 'science-kombat' %>
								<div class="ticker-action">
									<span>Feb 21, 2017</span>
									<h4><%= link_to 'Science Kombat', blog_details_path %></h4>	
								</div>
							</li>
						</ul>
					</div>
				</div>
				<div class="search-form">
					<form action="#" method="get" id="searchform">
						<input type="text" id="s" name="s" value="" placeholder="Type and hit enter">
						<input type="submit" class="search-submit" value="Search">	
					</form>
				</div>		
			</div>			
		</div><!-- /.container -->

		<header id="header" class="clearfix">
			<div class="navbar navbar-default">
				<nav class="container">
					<!-- navbar-header -->
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						</button>
					</div>
					<!-- /navbar-header -->
					
					<div class="navbar-left">
						<div class="navbar-collapse collapse" id="navbar-collapse">
							<div id="dropdown" class="theme-menu nav navbar-nav">
								<ul>
									<li class="active"><%= link_to 'Home', home_path %></li>
									<li class="dropdown"><a href="#">Pages</a>
										<ul class="sub-menu">
											<li><%= link_to 'Contact', contact_path %></li>
											<li><%= link_to 'Blog Details', blog_details_path %></li>
											<li><%= link_to '404 Pages', error404_path %></li>
										</ul>
									</li>
									<li><%= link_to 'Blog', blog_path %></li>
									<li><%= link_to 'About', about_path %></li>
									<li><%= link_to 'Contact', contact_path %></li>
								</ul>
							</div>								
						</div>
					</div>

					<div class="nav-right">
						<div class="login-signup">
							<ul class="clearfix">
								<li>
									<%= link_to 'Login', login_path %>
								</li>									
								<li>
									<%= link_to 'Signup', signup_path %>
								</li>
							</ul>
						</div>
						<div class="social-icons">
							<ul class="clearfix">
								<li><a href="#"><i class="fa fa-facebook"></i></a></li>
								<li><a href="#"><i class="fa fa-twitter"></i></a></li>
								<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
								<li><a href="#"><i class="fa fa-rss"></i></a></li>					
							</ul>
						</div>
					</div>
				</nav><!-- navbar -->				
			</div>
		</header>	

    <%= yield %>

		<footer>	
			<div class="container">
				<div class="footer-widget clearfix">
					<div class="row">
						<div class="col-sm-4">
							<div class="">
								<div class="widget widget_text">			
									<div class="textwidget">
										<%= link_to home_path do %>
											<%= image_tag 'footer-logo.png', alt: 'Desilog' %>
										<% end %>
										<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
									</div>
								</div>				
							</div>				
						</div>
						<div class="col-sm-4">
							<div class="widget widget_categories">
								<h5>Category</h5>		
								<ul>
									<li><a href="#">Branding</a></li>
									<li><a href="#">Character Design</a></li>
									<li><a href="#">Drawing</a></li>
									<li><a href="#">Editorial Design</a></li>
									<li><a href="#">Graphic Design</a></li>
									<li><a href="#">Illustration</a></li>
									<li><a href="#">Typography</a></li>
								</ul>
							</div>				
						</div>
						<div class="col-sm-4">
							<div class="widget widget_meta">
								<h5>Useful Links</h5>			
								<ul>
									<li><a href="#">Register</a></li>			
									<li><a href="#">Log in</a></li>
									<li><a href="#">Entries <abbr title="Really Simple Syndication">RSS</abbr></a></li>
									<li><a href="#">Comments <abbr title="Really Simple Syndication">RSS</abbr></a></li>
									<li><a href="#">WordPress.org</a></li>			
								</ul>
							</div>				
						</div>
					</div><!-- /.row -->
				</div><!-- /.footer-widget -->	

				<div class="clearfix">
					<label class="copyright">&copy;&nbsp;2017&nbsp;<a href="#">Desilog</a>&nbsp;‚Äê&nbsp;All Rights Reserved</label>
					<div class="footer-menu">
						<ul id="menu-footer-menu" class="clearfix">
							<li><%= link_to 'Home', home_path %></li>
							<li><%= link_to 'About', about_path %></li>
							<li><%= link_to 'Blog', blog_path %></li>
							<li><%= link_to 'Contact', contact_path %></li>
						</ul>
					</div>		
				</div>
			</div><!-- /.container -->
		</footer><!-- footer -->	
		
		<!-- JS -->
		<%= javascript_include_tag 'application' %>
	</body>
</html>
